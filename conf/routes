# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                             controllers.Application.index

# Playground
GET     /playground                   controllers.Application.playground

# Events
GET     /events                       controllers.Events.list
GET     /events/:id                   controllers.Events.get(id: Long)

# Speakers
GET     /speakers                     controllers.Speakers.list
GET     /speakers/:id                 controllers.Speakers.get(id: Long)

# Users
GET     /users/:id                    controllers.Users.get(id: Long)
POST    /users                        controllers.Users.create
PUT     /users/:id                    controllers.Users.update(id: Long)

# Messages
GET     /messages/general              controllers.DiscussionMessages.general
GET     /messages/event/:id           controllers.DiscussionMessages.event(id: Long)
#GET     /messages/private/:lid/:gid   controllers.DiscussionMessages.private(lid: Long, gid: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.at(path="/public", file)
